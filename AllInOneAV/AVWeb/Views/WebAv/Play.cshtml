<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>WebAV-播放</title>

    @Html.Partial("Header")
</head>

<body>
    @Html.Partial("Share")

    <div style="width:50%;position:absolute;top:50%;left:25%;font-size:13px">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">只包含可播放内容</span>
            </div>
            <input type="text" class="form-control" aria-label="Text input to search" id="searchContent" onkeydown="onKeyDown(event)">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary btn-info" type="button" id="searchBtn">搜索</button>
            </div>
        </div>
    </div>

    <script>
        $(".nav-item").removeClass("active");
        $("#play").addClass("active");

        $("#searchBtn").click(function () {
            search();
        });

        function search() {
            var value = $("#searchContent").val();

            if (value != "") {
                var param = "search=" + value;

                window.location.href = "/webav/getav?onlyexist=true&" + param;
            }
        }

        function onKeyDown(event) {
            var e = event || window.event || arguments.callee.caller.arguments[0];
            if (e && e.keyCode == 27) { // 按 Esc

            }
            if (e && e.keyCode == 113) { // 按 F2

            }
            if (e && e.keyCode == 13) { // enter 键
                search();
            }
        }
    </script>
</body>
</html>