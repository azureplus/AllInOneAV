@model Dictionary<string, List<FileInfo>>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Share</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery/1.10.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    @if (ViewData["pic"] != null)
    {
        <style>
            .jumbotron {
                background: url(@((string)ViewData["pic"]));
            }
        </style>
    }
</head>

<body>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">@((string)ViewData["name"])</h1>
            <p class="lead">共有@(Model.Count)部, @(Model.Values.Sum(x => x.Count))集</p>
        </div>
    </div>

    <div class="container">
        @foreach (var m in Model)
        {
            <div class="row">
                <div class="card" style="width:80%;margin-left:20px;">
                    <div class="card-header">
                        @m.Key
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var v in m.Value)
                        {
                            <a class="list-group-item" href="@("http://www.cainqs.com:8087/share/" + (string)ViewData["name"] + "/" + m.Key + "/" + HttpUtility.UrlEncode(v.Name, System.Text.Encoding.UTF8))" download="@(v.Name)">@(v.Name.Replace(v.Extension, "") + " 大小 " + Utils.FileSize.GetAutoSizeString(v.Length, 1) + " 点击下载")</a>
                        }
                    </ul>
                </div>
            </div>
            <br>
        }
    </div>
</body>
</html>
